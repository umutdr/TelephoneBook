@model DepartmentViewModel

<div class="container">
    <h1>Create New Department</h1>
    <hr />
    @using (Html.BeginForm("Create", "Department", FormMethod.Post))
    {
        <div class="form-group text-">
            @Html.LabelFor(model => model.DepartmentName)
            @Html.EditorFor(model => model.DepartmentName, additionalViewData: new { htmlAttributes = new { id = "departmentName", placeholder = "Department Name", @class = "form-control", required = "required" } })
            @Html.ValidationMessageFor(model => model.DepartmentName, "", htmlAttributes: new { @class = "text-danger" })
        </div>
        @*<div>
            @Html.ValidationSummary("", new { @class = "text-danger" })
        </div>*@
        <div class="form-group">
            <button name="submit" type="submit" class="btn btn-primary">Submit</button>
        </div>
    }
</div>
